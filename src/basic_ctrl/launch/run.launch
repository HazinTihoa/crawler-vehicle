<launch>
  
  <arg name="repeat"  default="false"/>

  <!-- Listen to messages from joysticks -->
   <!-- <node pkg="basic_ctrl" type="joy_node" name="joy_node" output="screen" > -->
  <node pkg="basic_ctrl" type="joy_node" name="joy_node"  >
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.12" />
  </node>
  <!--   <node pkg="basic_ctrl" name="joy_itrctrl" type="joy_itrctrl" output="screen"> -->
  <node pkg="basic_ctrl" name="joy_itrctrl" type="joy_itrctrl" >
    <rosparam command="load" file="$(find basic_ctrl)/config/params.yaml"/>
  </node>

</launch>
